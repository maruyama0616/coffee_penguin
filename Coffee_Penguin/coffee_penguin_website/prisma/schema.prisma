// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ニュース記事
model News {
  id          Int      @id @default(autoincrement())
  title       String
  content     String   @db.Text
  summary     String?
  imageUrl    String?
  isPublished Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("news")
}

// ギャラリー画像
model GalleryImage {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  imageUrl    String
  thumbnailUrl String?
  category    String?
  sortOrder   Int      @default(0)
  isVisible   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("gallery_images")
}

// お問い合わせ
model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String?
  message   String   @db.Text
  status    String   @default("new") // new, in_progress, resolved
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contacts")
}

// Suzuri商品情報
model SuzuriProduct {
  id              Int      @id @default(autoincrement())
  suzuriId        Int      @unique
  title           String
  imageUrl        String
  sampleImageUrl  String
  sampleUrl       String
  price           Int
  discountedPrice Int?
  itemType        String
  itemName        String
  isVisible       Boolean  @default(true)
  sortOrder       Int      @default(0)
  lastSyncAt      DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("suzuri_products")
}

// Suzuri同期ログ
model SuzuriSyncLog {
  id            Int      @id @default(autoincrement())
  status        String   // success, error
  productsCount Int
  errorMessage  String?
  syncedAt      DateTime @default(now())

  @@map("suzuri_sync_logs")
}

// サイト設定
model SiteConfig {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("site_configs")
}